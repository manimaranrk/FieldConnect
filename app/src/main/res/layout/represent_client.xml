<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/cback"
            android:layout_weight="1"
            android:background="@drawable/back1"
            android:layout_gravity="center"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field Connect"


                android:textStyle="bold"
                android:textColor="#01A9DB"
                android:textSize="25sp"
                android:id="@+id/textView" />

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/imageView"-->

            <!--android:background="@drawable/hetro"-->

             <!--/>-->


        </LinearLayout>



        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="cmenuButtonClickEvent"
            android:background="@drawable/menu"
            android:id="@+id/c_menu_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"

            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Site Details"
                android:background="@drawable/view_details"
                android:id="@+id/sitedetails_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who is Representing From Client"
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_marginTop="21dp"

            android:layout_below="@+id/sitedetails_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/client_spinner"
                android:background="@drawable/squareedittext1"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear1"
                android:layout_below="@+id/client_spinner"
                android:layout_alignLeft="@+id/client_spinner"
                android:layout_alignStart="@+id/client_spinner"

                android:layout_alignRight="@+id/client_spinner"
                android:orientation="vertical"
                android:layout_alignEnd="@+id/client_spinner">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#7e7e7e"
                android:id="@+id/clientname_edittext"
                android:background="@drawable/squareedittext1"
                android:layout_below="@+id/client_spinner"
                android:layout_alignLeft="@+id/client_spinner"
                android:layout_alignStart="@+id/client_spinner"
                android:layout_marginTop="24dp"
                android:layout_alignRight="@+id/client_spinner"
                android:layout_alignEnd="@+id/client_spinner" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Contact Number"
                android:maxLength="10"
                android:id="@+id/clientno_edittext"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#7e7e7e"
                android:inputType="number"
                android:background="@drawable/squareedittext1"
                android:layout_below="@+id/clientname_edittext"
                android:layout_alignLeft="@+id/clientname_edittext"
                android:layout_alignStart="@+id/clientname_edittext"
                android:layout_marginTop="27dp"
                android:layout_alignRight="@+id/clientname_edittext"
                android:layout_alignEnd="@+id/clientname_edittext" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/clientsubmit_button"
                android:background="@drawable/squareedittext2"
                android:layout_below="@+id/linear1"
                android:layout_alignLeft="@+id/linear1"
                android:layout_alignStart="@+id/linear1"
                android:layout_marginTop="36dp"
                android:layout_alignRight="@+id/linear1"
                android:layout_alignEnd="@+id/linear1" />


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
